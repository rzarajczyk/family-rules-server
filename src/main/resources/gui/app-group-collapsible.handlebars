<li class="fr-collapsible" data-group-id="{{id}}" data-group-color="{{color}}">
    <div class="fr-header collapsible-header">
        <div class="fr-image-icon" style="background-color: {{textColor}}"></div>
        <div class="fr-name-row">
            <span class="fr-name-text" style="color: {{textColor}};">{{name}}</span>

            <!-- badges -->
            <span class="new badge" style="width: 6rem" data-badge-caption="">{{#formatScreenTime}}{{totalScreenTime}}{{/formatScreenTime}}</span>
            {{#if online}}
                <span class="badge mr-2 is-online" data-badge-caption=""><i class="material-icons tiny">online_prediction</i></span>
            {{/if}}
        </div>
    </div>
    <div class="collapsible-body">
        <div class="app-group-details">
            <div class="app-group-info">
                <div class="app-group-summary">
                    <p><strong>{{appsCount}} apps across {{devicesCount}} devices</strong></p>
                    <p class="app-group-total-time">Total usage: {{#formatScreenTime}}{{totalScreenTime}}{{/formatScreenTime}}</p>
                </div>
                {{#if apps}}
                <div class="app-group-apps-list">
                    <ul class="collection">
                        {{#each apps}}
                        {{#if screenTime}}
                        <li class="collection-item app-usage-item" data-app-path="{{packageName}}">
                            <div class="app-info">
                                <img src="{{#if iconBase64}}data:image/png;base64,{{iconBase64}}{{else}}default-icon.png{{/if}}" 
                                     alt="{{name}}" 
                                     class="app-icon circle">
                                <div class="app-details">
                                    <span class="app-name clickable-app-name" 
                                          data-app-name="{{name}}"
                                          data-app-path="{{packageName}}">
                                        {{name}}
                                    </span>
                                    <div class="app-device-info">
                                        <span class="app-device">{{deviceName}}</span>
                                        <span class="app-percentage">{{percentage}}%</span>
                                    </div>
                                </div>
                            </div>
                            <span class="secondary-content">
                                {{#if online}}<span class="is-online mr-2"><i class="material-icons tiny">online_prediction</i></span>{{/if}}
                                {{#formatScreenTime}}{{screenTime}}{{/formatScreenTime}}
                            </span>
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
                {{else}}
                <div class="app-group-no-apps">
                    <p><em>No detailed app information available for this group.</em></p>
                    <p><small>This group contains {{appsCount}} apps across {{devicesCount}} devices.</small></p>
                </div>
                {{/if}}
            </div>
        </div>
        <div class="app-group-actions">
            <button class="app-group-all-apps-btn btn outlined" data-group-id="{{id}}">
                <i class="material-icons left">apps</i>
                Select Apps
            </button>
            <button class="app-group-rename-btn btn outlined" data-group-id="{{id}}">
                <i class="material-icons left">edit</i>
                Rename Group
            </button>
            <button class="app-group-remove-btn btn outlined" data-group-id="{{id}}">
                <i class="material-icons left">delete</i>
                Delete Group
            </button>
        </div>
    </div>
</li>
